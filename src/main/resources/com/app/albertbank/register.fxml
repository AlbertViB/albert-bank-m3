    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER_LEFT" fillHeight="false" layoutX="285.0" layoutY="373.0" maxHeight="-Infinity"
          maxWidth="250.0" prefWidth="250.0">
        <Button fx:id="goBack" mnemonicParsing="false" onAction="#goBackButtonRedirect"
                style="-fx-background-color: #bae6fd;" text="Go back"/>
    </HBox>

    <Label text="Register">
      <font>
         <Font size="39.0" />
      </font></Label>
   <TextField maxWidth="250.0" minWidth="250.0" prefHeight="26.0" prefWidth="250.0" promptText="Name" />
   <TextField maxWidth="250.0" minWidth="250.0" prefHeight="26.0" prefWidth="250.0" promptText="Email" />
   <TextField layoutX="285.0" layoutY="281.0" maxWidth="250.0" minWidth="250.0" prefHeight="26.0" prefWidth="250.0" promptText="Password" />
   <TextField layoutX="285.0" layoutY="304.0" maxWidth="250.0" minWidth="250.0" prefHeight="26.0" prefWidth="250.0" promptText="Repeat Password" />
    <HBox alignment="CENTER_RIGHT" fillHeight="false" maxHeight="-Infinity" maxWidth="250.0" prefWidth="250.0">
        <Button mnemonicParsing="false" style="-fx-background-color: #a7f3d0;" text="Register"/>
    </HBox>
</VBox>
